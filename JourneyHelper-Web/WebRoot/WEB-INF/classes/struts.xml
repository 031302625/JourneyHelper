<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.i18n.encoding" value="UTF-8"/> 
	<package name="fzu" extends="json-default">


		<action name="userLogin" class="com.fzu.journeyhelper.action.LoginAction"
			method="userLogin">
			<result name="success" type="json">
				<param name="excludeProperties">userName,passWord</param>
			</result>
			<result name="error" type="json">
				<param name="includeProperties">status</param>
			</result>
		</action>

		<action name="userRegist" class="com.fzu.journeyhelper.action.RegistAction"
			method="userRegist">
			<result name="success" type="json">
				<param name="includeProperties">status,user.*</param>
			</result>
			<result name="error" type="json">
				<param name="includeProperties">status</param>
			</result>
		</action>


		<action name="findCreatedRoutes" class="com.fzu.journeyhelper.action.FindRouteAction"
			method="findCreateRoutes">
			<result name="success" type="json">
				<param name="includeProperties">status,createList.*</param>
			</result>
		</action>

		<action name="findJoingRoutes" class="com.fzu.journeyhelper.action.FindRouteAction"
			method="findJoingRoutes">
			<result name="success" type="json">
				<param name="includeProperties">status,joindeList.*</param>
			</result>
		</action>

		<action name="createRoute" class="com.fzu.journeyhelper.action.CreateRouteAction"
			method="createRoute">
			<result name="success" type="json">
				<param name="excludeProperties">route.user,route.createUser,route.teamrecod,route.itinerarys,route.imageList</param>

			</result>
		</action>


		<action name="findUsersListofRoute" class="com.fzu.journeyhelper.action.FindUsersAction"
			method="findUsersList">
			<result name="success" type="json">
			</result>
		</action>


	</package>

</struts>    
